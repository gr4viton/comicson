#:kivy 1.9


<RedDwarfQiz>:
    cols: 2
    layout_bottom: layout_bottom
    GridLayout:
        cols:1
        Menu:
            size_hint_y: 4
        GridLayout:
            id: layout_bottom
            size_hint_y: 0
            cols: 1

<Menu>:
    cs: cs
    min_move: 0.05
    scroll_distance: self.height * 0.3
    direction: 'bottom'
    GridLayout:
        cols: 1
        Label:
            font_size: 30
            #'RedDwarf Queez'
            text:
                ('[b][color=ffffff]RE[/color][color=ff0000]D\nD[/color][color=ffffff]WARF[/color][/b]\n'
                '[b][color=ac42dc]Queez[/color][/b]\n')
            markup: True
            valign: 'middle'
            halign: 'center'
            size: self.texture_size
            line_height: 0.9
#            size_hint_y: 0.3
    #        Label:
    #            text: 'Welcom to RDQ!'
    #        Label:
    #            multiline: 'true'
    #
    #            text: 'To navigate through this app use swipes to sides. Try it out!'
        Button:
            text: 'xkcd'
            size: sp(68), sp(62)
            on_press: root.load_next()
        Button:
            text: 'smbc'

    ComicScreen:
        id: cs
#        downloader: root.downloader


<ComicStrip>
#    parent: parent
#    im_widget_layout: im_widget_layout
    im_widget: im_widget
#    alt_popup: alt_popup
    id: parent

    rightmost: 'False'
    leftmost: 'False'

    cols:1
#    title: '..loading..'
#    image_url: ''
#    name: 'unitialized'
    alt: ''

    num: 0
    size_hint: 1, 1
    text_size: self.size

    margin: 1
    color: .08,.16 , .24
    canvas.before:
        Color:
            rgb: self.color
        Rectangle:
            pos: self.x + self.margin, self.y + self.margin + 1
            size: self.width - 2 * self.margin , self.height - 2 * self.margin

    GridLayout:
        cols:2
        padding: 3,3,3,3
#        title: root.title
#        num: root.num
        size_hint: 1, 0.1
        height: 15
        GridLayout
            size_hint_x: 0.2
            cols:1

            color2: .08,.91 , .24
            margin: 1
            canvas.before:
                Color:
                    rgb: self.color2
                Rectangle:
                    pos: self.x + self.margin, self.y + self.margin + 1
                    size: self.width - 2 * self.margin , self.height - 2 * self.margin

            Label: # num label
                size_hint: 0.2, 1
                valign: 'middle'
    #            halign: 'center'
                size: self.texture_size
                text: str(root.num)
        GridLayout
            cols:1

            color2: .28,.21 , .44
            margin: 1
#            size: self.texture_size
            canvas.before:
                Color:
                    rgb: self.color2
                Rectangle:
                    pos: self.x + self.margin, self.y + self.margin + 1
                    size: self.width - 2 * self.margin , self.height - 2 * self.margin
#                    size: self.width , self.height

            Label: # title label
                size_hint: 0.8, 1
                valign: 'middle'
                halign: 'center'
                size: self.texture_size
#                text: parent.title
                text: root.title

#    CenteredAsyncImage:
    ComicStripImage:
        id: im_widget
        source: root.image_url
#        on_double_tap: CustomPopup(title=root.alt).open
#        on_press: root.alt_popup.open()

        on_press: root.popup_alt()

#        on_double_tap: self.zoom()

#    CustomPopup:
#        id: alt_popup
#        title: root.alt

<ComicStripImage>
    size: self.texture_size
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
#    on_press: root.popup()

<CenteredAsyncImage>
    size: self.texture_size
#    size_hint: None, None
#    size_hint: 10,10
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}


<ComicStripSlideViewer>
    min_move: 0.05
    scroll_distance: self.width * 0.05
    scroll_timeout: 200
    loop: True
#    buffer_count: 3

#    on_index: print("slide #{}".format(args[1]))
    on_index: root.on_sliding_end_index(args[1])
#    on_current_slide: print(args[1].title)
#    on_current_slide: root.on_sliding_end_current_slide(args[1])

#    on_touch_up: root.popup_alt()
#    on_state: root.popup_alt()

<ComicScreen>
    viewer: viewer
    small: 0.1
    big: 0.35
    GridLayout
        cols: 1
        ComicStripSlideViewer:
            id: viewer
            parent: root
#            downloader: root.downloader
            buffer_count: 3

        GridLayout:
            cols:5
            height: 13
            size_hint: 1, 0.1
            padding: 3,3,3,3
            Button:
                size_hint_x: root.big
                text: 'prev'
                on_press: viewer.prev_strip(from_gui=True)
            Button:
                size_hint_x: root.small
                text: 'rnd'
                on_press: viewer.set_number(random=True)
            Button:
                size_hint_x: root.small
                text: 'save'
                on_press: viewer.save_image()
            Button:
                size_hint_x: root.small
                text: 'set'
                on_press: viewer.set_number()
            Button:
                size_hint_x: root.big
                text: 'next'
                on_press: viewer.next_strip(from_gui=True)

<RandomNumberPopup>
    size_hint_y: 0.5
    auto_dismiss: False
    title: '...loading...'
#    background_color: (1, 1, 1, 125)
    color: (1,1,1,0.5)
    num: 1
    GridLayout:
        cols: 1
        Slider:

        Button:
    #        size_hint: .5, .5
            size_hint_y: 0.2
            text: 'Open number'
            on_press: root.dismiss()
        Button:
    #        size_hint: .5, .5
            size_hint_y: 0.2
            text: 'Click me to dismiss'
            on_press: root.dismiss()


<CustomPopup>:
    size_hint_y: 0.5
    auto_dismiss: False
    title: '...loading...'
#    background_color: (1, 1, 1, 125)
    color: (1,1,1,0.5)
    text: '...loading...'
    GridLayout:
        cols: 1
        Label:
            text: root.text
            multiline: True
#            padding: dp(10), dp(8)
#            size_hint: None, None
            size: self.texture_size
            text_size: self.size
            valign: 'middle'
        Button:
        #        size_hint: .5, .5
            size_hint_y: 0.2
            text: 'Click me to dismiss'
            on_press: root.dismiss()


<Page>:
    cols: 3
    name: 'unitialized'
    Label:
        text: root.name
    Label:
        text: str(id(root))
    Button
        text: 'load(page 3)'
        on_release:
            carousel = root.parent.parent
            carousel.load_slide(carousel.slides[2])
    Button
        text: 'prev'
        on_release:
            root.parent.parent.load_previous()
    Button
        text: 'next'
        on_release:
            root.parent.parent.load_next()



